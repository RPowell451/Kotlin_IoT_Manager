<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DogFeeder">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Add Time Button -->
    <Button
        android:id="@+id/btnAddTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_feeding_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Display Configured Times -->
    <ListView
        android:id="@+id/listViewTimes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAddTime"
        android:layout_marginTop="16dp"/>

</RelativeLayout>

<include layout="@layout/navigation_pane"/>

    </androidx.drawerlayout.widget.DrawerLayout>