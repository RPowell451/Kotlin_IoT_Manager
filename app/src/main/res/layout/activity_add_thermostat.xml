<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddThermostat">

    <EditText
        android:id="@+id/editTextThermostatName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Thermostat Name" />

    <EditText
        android:id="@+id/editTextRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Room" />

    <Button
        android:id="@+id/buttonConnectThermostat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Thermostat" />

</LinearLayout>
